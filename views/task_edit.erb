<h1>Update <%=@task.description() %> </h1>

<form action="/lists/<%= @list.id() %>/tasks/<%= @task.id %>/edit" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="description">Redescribe your task:</label>
    <input id="description" name="description" class="form-control" type="text" value="<%= @task.description() %>">
  </div>
  <button type="submit" class="btn btn-default">Update</button>
</form>
